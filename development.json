{
    "name": "API",
    "script": "./server.js",
    "cwd": "./",
    "watch": true,
    "ignore_watch": [
        "logs",
        "public",
        "node_modules",
        ".git",
        "coverage",
        "app",
        "test",
        "views"
    ],
    "watch_options": {
        "followSymlinks": false
    },
    "max_memory_restart": "768M",
    "log_date_format": "YYYY-MM-DD HH:mm:ss SSS",
    "out_file": "./logs/app.log",
    "error_file": "./logs/err.log",
    "env": {
        "NODE_ENV": "development"
    }
}
