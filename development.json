{
    "name": "API",
    "script": "./server.js",
    "cwd": "./",
    "watch": [
        "config",
        "controllers",
        "helper",
        "models",
        "routes",
        "views"
    ],
    "ignore_watch": [
        "logs",
        "public",
        "node_modules"
    ],
    "watch_options": {
        "followSymlinks": false
    },
    "max_memory_restart": "768M",
    "log_date_format": "YYYY-MM-DD HH:mm:ss SSS",
    "out_file": "./logs/app.log",
    "error_file": "./logs/err.log",
    "env": {
        "NODE_ENV": "development"
    }
}
